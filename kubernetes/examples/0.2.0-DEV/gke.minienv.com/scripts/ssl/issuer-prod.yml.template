apiVersion: certmanager.k8s.io/v1alpha1
kind: Issuer
metadata:
  name: minienv-letsencrypt-prod-issuer
  namespace: default
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: <YOUR_EMAIL_ADDRESS>
    privateKeySecretRef:
      name: minienv-letsencrypt-prod-secret
    dns01:
      providers:
        - name: clouddns
          clouddns:
            serviceAccountSecretRef:
              name: minienv-clouddns-secret
              key: clouddns.key.json
            project: <YOUR_GCP_PROJECT_NAME>